generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Guest {
  id          String   @id @default(cuid())
  name        String
  whatsapp    String
  to          String   // Tertuju kepada
  purpose     String   // Keperluan
  qrCode      String?  @unique // QR Code yang dihasilkan
  checkedIn   Boolean  @default(false) // Status check-in
  checkedInAt DateTime?
  logs        ReceptionLog[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Recipient {
  id          String   @id @default(cuid())
  name        String   @unique
  position    String   // Jabatan
  whatsapp    String?  // Nomor WhatsApp
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ReceptionLog {
  id        String   @id @default(cuid())
  guestId   String
  guest     Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  action    String
  notes     String?
  createdAt DateTime @default(now())

  @@index([guestId])
}
